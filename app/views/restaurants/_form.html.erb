<%= form_for(@restaurant) do |form| %>
  <%= render "shared/error_messages", object: form.object %>

  <%= form.label t "restaurant.name" %>
  <%= form.text_field :name, class: "form-control" %>

  <%= form.label t "restaurant.type" %>
  <%= form.text_field :type, class: "form-control" %>

  <%= form.label t "restaurant.average_star" %>
  <%= form.number_field :average_star, class: "form-control" %>

  <%= form.label t "restaurant.selected_count" %>
  <%= form.number_field :selected_count, class: "form-control" %>

  <%= form.label t "restaurant.address" %>
  <%= form.text_field :address, class: "form-control" %>

  <%= form.submit yield(:restaurant_button), class: "btn btn-primary" %>
<% end %>
